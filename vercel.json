{
  "version": 2,
  "builds": [
    { "src": "api/chat.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "/api/chat.js" },
    { "src": "/bot-logic/(.*)", "dest": "/bot-logic/$1" },
    { "src": "/chat-history.json", "dest": "/chat-history.json" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
